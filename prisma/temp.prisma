
generator photon {
    provider = "photonjs"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String  @default(cuid()) @id
    email       String  @unique
    password    String
    googleId    String  @unique
    googleToken String
    photoUrl    String
    name        String?
    posts       Post[]
    profile     Profile
    roles       Role[]
}

model Role {
    id       String @default(cuid()) @id
    slug     String @unique
    name     String
    roleCode Int
    users    User[]
}

model Post {
    id        String   @default(cuid()) @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    published Boolean  @default(false)
    title     String
    content   String?
    author    User?
}

// Ho So
model Profile {
    id           String    @default(cuid()) @id
    fullName     String
    gender       Boolean
    oldId        String?
    email        String?
    facebookId   String?
    phoneNumber  String?
    birthday     DateTime?
    joinDate     DateTime?
    dayOfBirth   Int?
    monthOfBirth Int?
    yearOfBirth  Int?
}

// Nhom Nho
model Group {
    id        String    @default(cuid()) @id
    name      String
    year      Int
    leader    Profile?  @relation(name: "GroupLeader")
    members   Profile[] @relation(name: "GroupMembers")
    org       Org
    startAt   DateTime  @default(now())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @default(now())
}

// Ban Nganh
model Org {
    id         String     @default(cuid()) @id
    name       String
    groups     Group[]
    activities Activity[]
}

// Bang Diem Danh
model Congregation {
    id        String   @default(cuid()) @id
    profile   Profile
    status    String
    createdAt DateTime @default(now())
}

// Lich sinh hoat
model Schedule {
    id       String   @default(cuid()) @id
    name     String
    activity Activity
}

// Hoat Dong
model Activity {
    id   String @default(cuid()) @id
    name String
    type String
    org  Org
}